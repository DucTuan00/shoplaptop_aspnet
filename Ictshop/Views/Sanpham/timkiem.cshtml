@model PagedList.IPagedList<Ictshop.Models.Sanpham>

@using PagedList.Mvc;


@{
    ViewBag.Title = "timkiem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý sản phẩm </h2>

<p>
    <button class="btn-default" style="color:white">@Html.ActionLink("Thêm mới", "Create")</button>
</p>
<table class="table table-bordered">
    <tr>

        <th>
            Tên sản phẩm
        </th>
        <th>
            Giá tiền
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Cpu
        </th>
        <th>
            Gpu
        </th>
        <th>
            Ảnh bìa
        </th>
        <th>
            Tên hãng
        </th>
        <th>
            Hệ điều hành
        </th>
        <th> Hành động</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Tensp)
            </td>
            <td>
                @String.Format("{0:0,0}", item.Giatien) VNĐ
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soluong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gpu)
            </td>
            <td>
                <img src="@Url.Content("~" +item.Anhbia)" width="50" height="50" />
                @*@Html.DisplayFor(modelItem => item.Anhbia)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hangsanxuat.Tenhang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hedieuhanh.Tenhdh)
            </td>
            <td>
                <br />
                @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = item.Masp, @strURL = Request.Url.ToString() }))
                {
                    <input type="submit" value="Mua hàng" id="bgnGioHang" />
                }
            </td>
        </tr>
    }

</table>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>

    var inputField = document.getElementById("searchText");
    var button = document.getElementById("buttonSearch");

    button.addEventListener("click", function () {

        var inputValue = inputField.value;


        if (inputValue.trim() !== "") {

            var baseUrl = "/Home/SearchText";
            var url = baseUrl + "?searchText=" + encodeURIComponent(inputValue);


            window.location.href = url;
        }
    });
</script>
<br />

    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page }))

    <!-- Kết thúc -->
